@model IEnumerable<MvcAuth.DataAccess.Role>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RoleName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RoleName)
            </td>
            <td>
                @Html.ActionLink("Agregar Usuarios", "RoleUsersAdd", new { id = item.RoleId }) |
                @Html.ActionLink("Ver Usuarios", "RoleUsers", new { id = item.RoleId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.RoleId })
            </td>
        </tr>
    }

</table>

